{
  "compilerOptions": {
    /* Basic Options */
    "target": "ES2024",
    "module": "commonjs",
    "allowJs": true,
    "sourceMap": true,
    "outDir": "../dist",
    "rootDir": "./",
    "esModuleInterop": true,
    "noImplicitAny": false,
    "types": [
      "jquery",
      "node"
    ],
    "typeRoots": [
      "./node_modules/@types",
      "./types"  // Optionally add custom types if needed
    ],

    /* Additional Options */
    "moduleResolution": "node"
  },
  "exclude": [
    "enhancer/kiuwanAuditTab.ts",
    "enhancer/kiuwanTab.ts",
    "enhancer/kiuwanSummary.ts"
  ]
}